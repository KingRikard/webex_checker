{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Get Faculty Webex Status",
            "wrap": true,
            "size": "Medium",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Enter FIRST NAME:",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "first name",
            "id": "nameFirst",
            "maxLength": 26
        },
        {
            "type": "TextBlock",
            "text": "Enter LAST NAME:",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "last name",
            "id": "nameLast",
            "maxLength": 50
        },
        {
            "type": "TextBlock",
            "text": "Enter the User's Email address:",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "Enter Full Email",
            "id": "userEmail",
            "style": "Email"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "style": "positive",
                    "data": {
                        "callback_keyword": "addUser"
                    }
                }
            ]
        }
    ]
}